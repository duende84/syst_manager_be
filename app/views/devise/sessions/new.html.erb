<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Server Monitor Login</h1>
                    <h3>Introduce your credentials to access the dashboard</h3>
                    <hr class="intro-divider">
                    <div class="container">
                        <div class="card card-container">
                          <p id="profile-name" class="profile-name-card"></p>
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
                            <span id="reauth-email" class="reauth-email"></span>
                            <div class="field">
                              <%= f.label :email, class: "blacky" %><br />
                              <%= f.email_field :email, autofocus: true, class: "form-control" %>
                            </div>

                            <div class="field">
                              <%= f.label :password, class: "blacky" %><br />
                              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                            </div>

                            <% if devise_mapping.rememberable? -%>
                              <div class="field">
                                <%= f.check_box :remember_me%>
                                <%= f.label :remember_me, class: "blacky"  %>
                              </div>
                            <% end -%>

                            <div class="actions">
                              <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block btn-signin" %>
                            </div>
                          <% end %>
                          <%= render "devise/shared/links" %>
                        </div><!-- /card-container -->
                    </div><!-- /container -->
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->
</div>
  <!-- /.intro-header -->


